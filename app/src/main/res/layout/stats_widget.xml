<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNavOpacity"

    android:padding="5dp">

<ImageView
    android:layout_alignParentEnd="true"
    android:layout_above="@id/line"
    android:src="@drawable/icon"
    android:layout_width="30dp"
    android:layout_height="30dp"/>
    <LinearLayout
        android:id="@+id/line"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/splash"
        android:orientation="vertical"
        android:padding="5dp">

            <TextView
                android:textColor="@color/colorWhite"
                android:id="@+id/nameStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/sans_light"
                android:maxLines="1"
                android:text="" />



            <TextView
                android:padding="5dp"
                android:id="@+id/nameLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/sans_light"
                android:maxLines="1"
                android:textColor="@color/colorbdb"
                android:textStyle="bold"
                android:text="" />
        <TextView
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:id="@+id/dataStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/sans_light"
            android:maxLines="1"
            android:text="" />

    </LinearLayout>


</RelativeLayout>